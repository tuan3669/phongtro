<!-- header -->

<div id="dashboard" class="container-fluid">
  <div class="row flex-nowrap">
    <!-- sidebar -->
    <%- include('../../partials/sidebarPanel'); %>
    <!-- sidebar -->

    <!-- main -->
    <main id="main" class="col-md-10 col-sm">
      <nav aria-label="breadcrumb" class="bg-gray p-3 rounded mb-2">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="#">Phongtro123.com </a></li>
          <li class="breadcrumb-item"><a href="#">Quản lí</a></li>
          <li class="breadcrumb-item active">Thông tin cá nhân</li>
        </ol>
      </nav>

      <!--  -->
      <div class="w-100">
        <form style="max-width: 600px; margin: 0 auto">
          <div class="row">
            <div class="col-12">
              <div class="mb-3">
                <label for="oldpassword" class="form-label">Mật khẩu cũ</label>
                <input
                  type="password"
                  class="form-control"
                  id="old-password"
                  placeholder="Nhập mật khẩu cũ"
                />
              </div>
              <div class="mb-3">
                <label for="newPassword" class="form-label">Mật khẩu mới</label>
                <input
                  type="password"
                  class="form-control"
                  id="new-password"
                  placeholder="Nhập mật khẩu mới"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <button type="submit" id="btn-change-password" class="btn btn-primary w-100">
                Lưu
              </button>
            </div>
          </div>
        </form>
      </div>
    </main>
  </div>
</div>

